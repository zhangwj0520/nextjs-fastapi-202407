  "version": "0.2.0",
  "compounds": [
    {
      "name": "Start",
      "configurations": ["Backend", "Frontend"],
      // "preLaunchTask": "${defaultBuildTask}",
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "command": "pnpm run dev",
      "name": "Frontend",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "api.main:app",
        "--reload",
        "--port=8910"
      ],

      "jinja": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]

}
